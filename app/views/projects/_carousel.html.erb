 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @project.project_photos.each_with_index do |p, index| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= 'active' if p == @project.project_photos[0] %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner" style="width: 500px">
    <% @project.project_photos.each do |pre| %>
    <div class="carousel-item <%= 'active' if pre == @project.project_photos[0] %>">
      <%= cl_image_tag pre.photo, width: 500, height: 400, crop: :fill %>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

