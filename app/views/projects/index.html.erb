<%= render 'shared/navbar' %>

<div class="project-container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.6)), url(<%=asset_path('chalk.jpg')%>)">
  PROJETOS ESCOLARES
  </div>

  <div class="project-top">
    <div class="project-title">
      <h1>Encontre projetos para apoiar</h1>
    </div>
    <% if teacher_signed_in? %>
    <div class="project-new-btn">
      <a class="btn btn-flat" href="/projects/new"><i class=" mr-2 fas fa-plus"></i>Criar novo projeto</a>
    </div>
    <% end %>
  </div>
  <div class="project-filters">
  <%= render 'filterform' %>
  </div>
  <div class="project-index">
      <div class="project-cards">
        <% @projects.each do |project| %>
          <div class="project-card">
        <%= link_to project_path(project) do  %>
            <% if project.project_photos[0].nil? %>
               no photo
            <% else %>
              <div class="project-img">
                <%= cl_image_tag project.project_photos[0].photo%>
              </div>
            <% end %>
            <div class="card-title">
            <h4><%= link_to project.title, project_path(project) %></h4>
               <%= link_to project_path(project) do  %>
            <p class="card-subtitle mb-2 text-muted"><%= project.description[0..30] %>...[veja mais]</p>
            </div>
            <% end %>
             <%= link_to project_path(project) do  %>
            <div class="project-items">
            <p><i class="fas fa-pencil-ruler"></i>  <%= project.category %></p>
            <p><i class="fas fa-hand-holding-heart"></i>  <%= project.material %></p>
            <p><i class="fas fa-calculator"></i>  <%= project.quantity %> unidades </p>
            <p><i class="far fa-calendar-alt"></i>   <%= project.limit_date.strftime("%d/%m/%Y") %></p>
            </div>
            <% end %>
            <% end %>

          </div>
          <% end %>
      </div>
  </div>
</div>
<%= render 'shared/footer' %>
